{
  "name": "@ethicdevs/fastify-git-server",
  "version": "1.4.1",
  "description": "A Fastify plugin to easily make one/many Git repositories available for clone/fetch/push.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "EthicDevs",
    "email": "contact@ethicdevs.com",
    "url": "https://ethicdevs.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ethicdevs/fastify-git-server"
  },
  "keywords": [
    "fastify",
    "plugin",
    "git",
    "server",
    "pre-handler",
    "typescript",
    "library"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "ci": "run-s test build",
    "dev": "nodemon -w .env -w .env.local -w . -x 'run-s typecheck start:dev'",
    "start": "NODE_ENV=production node ./dist/index.js",
    "start:dev": "NODE_ENV=development ts-node ./src/index.ts",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "fastify-plugin": "^3.0.1",
    "git-side-band-message": "^0.0.3"
  },
  "devDependencies": {
    "@babel/core": ">=7.0.0-beta.0 <8",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "babel-jest": ">=27.0.0 <28",
    "bufferutil": "^4.0.1",
    "fastify": "^3.27.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tslib": ">=2.4.0",
    "typescript": "^4.6.2",
    "utf-8-validate": "^5.0.2"
  },
  "peerDependencies": {
    "fastify": "^3.27.4",
    "tslib": ">=2.4.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "!tests/__fixtures/*"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci"
    }
  }
}
